<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    android:orientation="horizontal"
    tools:context=".RegisterFormActivity">

  <TextView
      android:id="@+id/register_form_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/visiting_register_form"
      android:textColor="@color/colorPrimaryDark"
      android:textColorHighlight="@color/white"
      android:textSize="40sp"
      app:drawableStartCompat="@drawable/form"
      app:layout_constraintBottom_toTopOf="@+id/guideline3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.584"
      tools:ignore="TextContrastCheck" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.2" />

  <EditText
      android:id="@+id/edit_name_visitor"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:autofillHints=""
      android:background="@drawable/edit_text_background"
      android:ems="10"
      android:hint="@string/edit_visitor_name"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textColorHint="#01579B"
      android:textColor="#01579B"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline3"
      tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

  <EditText
      android:id="@+id/edit_id_card"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginTop="32dp"
      android:autofillHints=""
      android:background="@drawable/edit_text_background"
      android:ems="10"
      android:hint="@string/edit_id_card"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textSize="40sp"
      android:textColorHint="#01579B"
      android:textColor="#01579B"
      app:layout_constraintEnd_toEndOf="@+id/edit_name_visitor"
      app:layout_constraintStart_toStartOf="@+id/edit_name_visitor"
      app:layout_constraintTop_toBottomOf="@+id/edit_name_visitor"
      tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

  <EditText
      android:id="@+id/edit_time"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginTop="32dp"
      android:autofillHints=""
      android:background="@drawable/edit_text_background"
      android:ems="10"
      android:hint="@string/edit_time"
      android:inputType="text"
      android:minHeight="48dp"
      android:textSize="40sp"
      android:textColorHint="#01579B"
      android:textColor="#01579B"
      app:layout_constraintEnd_toEndOf="@+id/spinner_apartment_id"
      app:layout_constraintStart_toStartOf="@+id/spinner_apartment_id"
      app:layout_constraintTop_toBottomOf="@+id/spinner_apartment_id"
      tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

  <Spinner
      android:id="@+id/spinner_apartment_id"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginTop="36dp"
      android:textColor="#01579B"
      android:background="@drawable/style_spinner"
      android:contentDescription="@string/drop_down"
      android:spinnerMode="dropdown"
      android:text="@string/apartment_id"
      app:layout_constraintEnd_toEndOf="@+id/edit_id_card"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/edit_id_card"
      app:layout_constraintTop_toBottomOf="@+id/edit_id_card" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:background="@drawable/button_background"
      android:hint="@string/register"
      android:text="@string/register"
      android:textSize="20sp"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edit_time"
      tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>